{% extends '@EasyAdmin/page/content.html.twig' %}
{% set title = 'Dashboard'|trans %}
{% block content_title %}{{ title|trans }} <small class="text-secondary">{{ 'Manager'|trans }}</small>{% endblock %}
{% block page_actions %}
    <a class="btn btn-primary" href="#!">
        <i class="fas fa-home"></i> {{ 'Step 1'|trans }}
    </a>
{% endblock %}
{% block main %}

    <div class="easyadmin-container">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ 'Welcome to the MANAGER Dashboard'|trans }}</h3>
            </div>
            <div class="card-body">
                <p class="lead">{{ 'This is your customized EasyAdmin dashboard with a beautiful background image and color tone.'|trans }}</p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4>{{ 'All Projects'|trans }}</h4>
                        {% include 'body/admin/dashboard/_table_project.html.twig' %}
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
