{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/easyadmin-theme.css') }}">
{% endblock %}

{% block head_javascript %}
    {{ parent() }}
    <script src="{{ asset('admin.js') }}" defer></script>
{% endblock %}

{% block body_class %}ea-dashboard bg-tone-default{% endblock %}

{% block content_header_wrapper %}
    <div class="easyadmin-title-spacing"></div>
    <div class="easyadmin-container">
        <h1 class="ea-dashboard-title">
            <i class="fa fa-tachometer-alt"></i>
            {{ 'Dashboard'|trans }}
        </h1>
    </div>
{% endblock %}

{% block page_content %}
    <div class="easyadmin-container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">{{ 'Welcome to your Dashboard'|trans }}</h3>
                    </div>
                    <div class="card-body">
                        <p class="lead">{{ 'This is your customized EasyAdmin dashboard with a beautiful background image and color tone.'|trans }}</p>
                        
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                                        <h4>{{ 'Users'|trans }}</h4>
                                        <p class="text-muted">{{ 'Manage system users and their permissions'|trans }}</p>
                                        <a href="{{ path('admin_user_index') }}" class="btn btn-primary">
                                            {{ 'View Users'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <i class="fas fa-cogs fa-3x text-success mb-3"></i>
                                        <h4>{{ 'Modules'|trans }}</h4>
                                        <p class="text-muted">{{ 'Configure and manage system modules'|trans }}</p>
                                        <a href="{{ path('admin_module_index') }}" class="btn btn-success">
                                            {{ 'View Modules'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
